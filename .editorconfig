# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
tab_width = 4
indent_style = space
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
ij_javascript_use_semicolon_after_statement = true
trim_trailing_whitespace = false

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
